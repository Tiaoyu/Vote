@{
    var round = ViewData["ROUND"] as RoundModel;
    ViewData["Title"] = round.RoundDesc;
    var targetList = ViewData["TARGET_LIST"] as List<TargetModel>;
    var choiceList = ViewData["CHOICE_LIST"] as List<ChoiceModel>;
}
<div class="row">
    @foreach (var target in targetList)
    {
        <div class="col-xs-4 col-sm-3">
            <input type="hidden" />
            <img width="150" src="~/img/@target.TargetContent" /><br />
            <div class="custom-radio">
                @foreach (var choice in choiceList)
                {
                    <label>@choice.ChoiceContent</label>
                    <input type="radio" name="@target.TargetId" value="@choice.ChoiceValue" />
                    <label>@choice.ChoiceValue</label>
                }
            </div>
        </div>
    }

</div>
<div class="row">
    <div>
        <form id="vote_form">
            <input type="hidden" name="roundId" value="@round.RoundId"/>
            <label>UserName</label><input name="userName" />
            <input type="button" id="vote_form_submit" value="SUBMIT"/>
        </form>
    </div>
</div>
